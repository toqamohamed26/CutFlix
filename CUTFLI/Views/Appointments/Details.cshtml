@model CUTFLI.ViewModels.AppointmentViewModel

@{
    if (User.IsInRole("Admin"))
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_UserLayout.cshtml";
    }
}

<div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3"><span class="text-muted fw-light">Appointment /</span> Details</h4>
    <div class="d-flex justify-content-end mb-3">
        <div>
            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
            <a class="btn btn-sm btn-secondary" asp-action="Index">Back to List</a>
        </div>
    </div>

    <div class="row py-5 d-flex justify-content-around align-items-center bg-white">
        <div class="col-6 col-md-3  d-flex justify-content-center">
            <div>
                <h6>Date :</h6>
                <p>@Model.Date.ToString("D")</p>
                <h6>Start Time :</h6>
                <p>@(new DateTime(Model.StartTime.Ticks).ToString("hh:mm tt"))</p>
                <h6>End Time :</h6>
                <p>@(new DateTime(Model.EndTime.Ticks).ToString("hh:mm tt"))</p>
                <h6>Status :</h6>
                <p><span class="badge rounded-pill @Model.SetColor()">@Model.Status</span></p>
            </div>
        </div>
        <div class="col-6 col-md-3  d-flex justify-content-center">
            <div>
                <h6>Customer :</h6>
                <p>@(Model.People?.FullName == null ? "No Customer exist" : Model.People?.FullName)</p>
                <h6>Employee :</h6>
                <p>@Model.User.FullName</p>
                <h6>Price :</h6>
                <p>@Model.Price</p>
                <h6>Payment Method :</h6>
                <p>@Model.PaymentMethod</p>
            </div>
        </div>
    </div>

</div>
