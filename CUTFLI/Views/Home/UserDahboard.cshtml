@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-12 col-md-8 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="">
                        <div class="flex-shrink-0 text-center">
                            @if (!string.IsNullOrEmpty(Context.Session.GetString("Image"))) {
                              <img src="data:image\/*;base64,@Context.Session.GetString("Image")" width="250" alt="appointment" class="rounded img-fluid" />
                            }else{
                                <img src="~/assets/img/dashboard/user.png" width="250" alt="appointment" class="rounded img-fluid" />
                            }
                            <div class="text-center mt-4">
                                <span class="display-5 d-block mb-4">@Context.Session.GetString("Name")</span>
                                <h6 class="mb-2">@Context.Session.GetString("Role")</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

