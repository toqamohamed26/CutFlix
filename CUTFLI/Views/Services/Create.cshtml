@using CUTFLI.Enums
@model CUTFLI.ViewModels.ServiceViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Service /</span> Add Service</h4>
    <div class="row d-flex justify-content-center">
        <div class="col-12 col-md-6 col-lg-8">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Add Service</h5>
                </div>
                <div class="card-body">
                    <form method="POST" asp-action="Create" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label" asp-for="Name">Service Name</label>
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text">
                                    <i class="bx bx-user"></i>
                                </span>
                                <input type="text"
                                       asp-for="Name"
                                       maxlength="60"
                                       class="form-control"
                                       placeholder="Name" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" asp-for="Price">Price</label>
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text">
                                    <i class='bx bx-money'></i>
                                </span>
                                <input asp-for="Price"
                                       class="form-control"
                                       placeholder="Price" />
                            </div>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" asp-for="Gender"></label>
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text">
                                    <i class="bx bx-user"></i>
                                </span>
                                <select class="form-select" asp-for="Gender" asp-items="@(Html.GetEnumSelectList<SystemEnums.Gender>())">
                                    <option selected>Open this select menu</option>
                                </select>
                            </div>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" asp-for="Image">Image</label>
                            <div class="input-group input-group-merge">
                                <input type="file"
                                       asp-for="Image"
                                       accept=".png, .jpg"
                                       class="form-control" />
                            </div>
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" asp-for="Description"></label>
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text">
                                    <i class='bx bx-note'></i>
                                </span>
                                <input type="text"
                                       asp-for="Description"
                                       class="form-control"
                                       placeholder="Description" />
                            </div>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Add</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
