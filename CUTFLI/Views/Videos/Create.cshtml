@model CUTFLI.ViewModels.VideoViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Video</span></h4>
    <div class="row d-flex justify-content-center">
        <div class="col-12 col-md-6 col-lg-8">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Add Video</h5>
                </div>
                <div class="card-body">
                    <form method="POST" asp-action="Create" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label" asp-for="Video">Video</label>
                            <div class="input-group input-group-merge">
                                <input type="file"
                                       asp-for="Video"
                                       class="form-control"
                                       accept="video/mp4,video/x-m4v,video/*" />
                            </div>
                            <span asp-validation-for="Video" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Add</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
