<div class="p-md-5 m-md-4">
    <div class="overlay position-relative">
        <div class="d-flex flex-wrap p-2">
            @foreach (var item in Model)
            {
                <div class="col-6 p-md-3 ">
                    <div class="w-100 position-relative">
                        <a asp-controller="CutFli" asp-action="Services" asp-route-barber="@item.Id">
                            <img src="@("data:image/*;base64,"+Convert.ToBase64String(item.Image))" alt="" class="w-100 p-3 homeimg" style="height: 750px;">
                    </a>
                    <div class="position-absolute text-overlay translate-middle-x text-center bottom-0 start-50 translate-middle-x">
                            <h3 class="text-center text-uppercase py-4">@item.FullName</h3>
                        </div>
                </div>
            </div>
            }

        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
