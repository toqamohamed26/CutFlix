@model IEnumerable<CUTFLI.ViewModels.Barbers>
@{
    Layout = "~/Views/Shared/_UiLayout.cshtml";
}
<div class="play">
    <video id="myVideo" class="img-fluid w-100" autoplay>
        <source id="mp4_src" src="@Url.Action("GetVideo","CutFli", new { videoName = ViewBag.Video })" type="video/mp4">
        Your browser does not support the video tag.
    </video>
</div>

<div class="d-flex justify-content-center">
    <img src="~/assets/img/Ui/2 2.png" alt="" class="imglogo">
</div>
<div class="d-flex justify-content-center">
    <p class=" text text-center"> Barbers</p>

</div>
